        input, select, button {
            outline: none;
            border: none;
            background-color: revert;
        }

        button {
            margin-top: 20px;
            width: 100%;
            display: block;
        }

        .new {
            margin-bottom: 100px;
        }
        .new:last-of-type {
            margin-bottom: 0;
        }
